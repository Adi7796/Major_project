<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/home_back"
    tools:context="com.example.adity.major_project.HomePage">


    <TextView
        android:id="@+id/t2"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your vital values are as follows"
        android:textSize="24dp"
        android:textColor="#241315"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pulse"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/pulse"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="120/70"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#241315"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:maxHeight="85dp"
            android:scaleType="fitCenter"
            />

        <Button
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="98 deg F"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_button2"
            android:gravity="center"
            android:textColor="#241315"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/square_button"
            android:gravity="center"
            android:text="Check Prognosis"
            android:textColor="#241315"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cont_doc"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/square_button"
            android:gravity="center"
            android:text="Contact doctor"
            android:textColor="#241315"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/predict"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Predict Disease"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/rounded_button2"
        android:gravity="center"
        android:textColor="#241315"
         />

</LinearLayout>
